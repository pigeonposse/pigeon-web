{
	"name": "@pigeonposse/web",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/pigeonposse/pigeon-web"
	},
	"type": "module",
	"scripts": {
		"build": "vite build",
		"build-app": "tauri build",
		"build-assets": "pnpm --sequential \"/build-assets:.*/\"",
		"build-assets:app": "tauri icon src-tauri/icons/icon.png",
		"build-assets:web": "dovenv -c ../../.dovenv/main.js docs generate-assets --flag=\"--preset minimal\" --flag=\"static/logo.png\"",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"dev": "vite dev",
		"dev-app": "tauri dev",
		"preview": "vite preview",
		"tauri": "tauri",
		"test": "pnpm test:e2e && pnpm test:unit",
		"test:e2e": "playwright test",
		"test:unit": "vitest"
	},
	"devDependencies": {
		"@fortawesome/free-brands-svg-icons": "6.7.2",
		"@fortawesome/free-solid-svg-icons": "6.7.2",
		"@pigeonposse/api": "workspace:*",
		"@pigeonposse/api-client": "workspace:*",
		"@sveltejs/adapter-static": "3.0.8",
		"@sveltejs/kit": "2.16.1",
		"@sveltejs/vite-plugin-svelte": "5.0.3",
		"@tauri-apps/api": "2.2.0",
		"@tauri-apps/cli": "2.2.7",
		"autoprefixer": "10.4.20",
		"flowbite": "3.0.0",
		"flowbite-svelte": "0.47.4",
		"internal-ip": "^8.0.0",
		"postcss": "8.5.1",
		"svelte": "5.19.5",
		"svelte-check": "4.1.4",
		"svelte-fa": "4.0.3",
		"svelte-portal": "2.2.1",
		"sveltekit-i18n": "2.4.2",
		"tailwindcss": "3.4.17"
	}
}
